<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <androidx.cardview.widget.CardView
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:elevation="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:translationZ="90dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:id="@+id/back_button"
                android:background="@drawable/ic_back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/helvetica_medium"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Race Finished"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toplayout"
        android:layout_above="@+id/bottom_button"
        android:scrollbars="none">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LeaderBoard"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:fontFamily="@font/archivoblack_regular"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:paddingTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="Top Three"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">
        <TextView android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="1."
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/helvetica_bold"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/example"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/number1"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0.5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:text="Nancy Ward"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/helvetica_bold"
            />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/medal_gold" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">
        <TextView android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2."
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/helvetica_bold"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/example"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/number2"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0.5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:text="Nancy Ward"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/profile_image2"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/helvetica_bold"
            />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/medal_silver" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">
        <TextView android:id="@+id/number3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="3."
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/helvetica_bold"
            />
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/example"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/number3"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0.5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_centerVertical="true"
            android:text="Nancy Ward"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/profile_image3"
            android:layout_marginLeft="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/helvetica_bold"
            />

        <ImageView
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/medal_bronze" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E4E4E4"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica_bold"
            android:paddingTop="13dp"
            android:layout_marginBottom="13dp"
            android:text="All Participants"
            android:layout_marginLeft="30dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/example"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0.5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image5">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nancy Ward"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/helvetica_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Min 30 Sec"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/helvetica_medium"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/medal_runnerup" />

    </RelativeLayout><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/example"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="0.5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/profile_image4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nancy Ward"
                android:textSize="17sp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/helvetica_bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Min 30 Sec"
                android:textSize="10sp"
                android:layout_marginLeft="20dp"
                android:textColor="@android:color/darker_gray"
                android:fontFamily="@font/helvetica_medium"
                />
        </LinearLayout>


        <ImageView
            android:layout_width="26dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/medal_runnerup" />

    </RelativeLayout>
</LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:backgroundTint="#00475D"
        android:layout_marginBottom="1dp"
        android:layout_alignParentBottom="true"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share Results"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:gravity="center"
                android:drawablePadding="20dp"

                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_share"
                android:fontFamily="@font/roboto_regular"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>