<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <androidx.cardview.widget.CardView
        android:id="@+id/topCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            android:paddingTop="10dp"
            android:translationZ="90dp"
            android:paddingBottom="10dp"
            android:clipToPadding="false">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back_arrow"
                android:id="@+id/back_button"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_medium"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_centerInParent="true"
                android:paddingBottom="10dp"
                android:text="Fox Events"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </RelativeLayout>

        
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topCard"
        android:layout_above="@+id/bottomLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="#F5F5F5">
                <LinearLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                    <ImageView
                        android:layout_width="73dp"
                        android:layout_height="73dp"
                        android:background="@drawable/fox"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fox Events"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/helvetica_bold"/>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:textSize="14sp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#B6B6B6"
                android:text="Sed ut perspiciatis unde omnis iste natus error sit voluptatem accusantium doloremque laudantium, totam rem aperiam."/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Events"
           android:textColor="@android:color/black"
           android:textSize="16sp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="35dp"
           android:fontFamily="@font/archivo_black"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/first_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_width="108dp"
                        android:layout_height="159dp"
                        android:background="@drawable/cycling" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_bold"
                            android:text="Cycling Event 1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/helvetica_medium"
                                android:layout_centerVertical="true"
                                android:text="Cycling • 820KM • Copenhagen"
                                android:textSize="8sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="5/12"
                                    android:textColor="#004B74"
                                    android:textSize="9sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="Booked"
                                    android:textColor="@android:color/black"
                                    android:textSize="9sp" />
                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helvetica_medium"
                            android:text="Sed ut perspiciatis unde omnis
iste Unde Omnis Iste... "
                            android:textColor="#787878"
                            android:textSize="12sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:background="@drawable/light_blue">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_start"
                                    android:textSize="8sp"
                                    android:layout_marginBottom="15dp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="7 Oct 14:56 To 8 Oct 18:56"
                                    android:drawablePadding="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_finish"
                                    android:textSize="8sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="8 Oct 09:56 To 8 Oct 18:56"
                                    android:drawablePadding="10dp"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:text="$5.00"
                                android:textSize="14sp"
                                android:fontFamily="@font/helvetica_bold"
                                android:textColor="@android:color/black"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="30dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="15dp">

                    <ImageView
                        android:layout_width="108dp"
                        android:layout_height="159dp"
                        android:background="@drawable/cycling" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/helvetica_bold"
                            android:text="Cycling Event 1"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/helvetica_medium"
                                android:layout_centerVertical="true"
                                android:text="Cycling • 820KM • Copenhagen"
                                android:textSize="8sp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="5/12"
                                    android:textColor="#004B74"
                                    android:textSize="9sp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="Booked"
                                    android:textColor="@android:color/black"
                                    android:textSize="9sp" />
                            </LinearLayout>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/helvetica_medium"
                            android:text="Sed ut perspiciatis unde omnis
iste Unde Omnis Iste... "
                            android:textColor="#787878"
                            android:textSize="12sp" />
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="8dp"
                                android:background="@drawable/light_blue">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_start"
                                    android:textSize="8sp"
                                    android:layout_marginBottom="15dp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="7 Oct 14:56 To 8 Oct 18:56"
                                    android:drawablePadding="10dp"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableLeft="@drawable/ic_finish"
                                    android:textSize="8sp"
                                    android:textColor="@android:color/black"
                                    android:fontFamily="@font/helvetica_bold"
                                    android:text="8 Oct 09:56 To 8 Oct 18:56"
                                    android:drawablePadding="10dp"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:text="$5.00"
                                android:textSize="14sp"
                                android:fontFamily="@font/helvetica_bold"
                                android:textColor="@android:color/black"
                                />
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00475D"
        android:layout_alignParentBottom="true"
        >
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="See Website"
    android:drawableLeft="@drawable/white_globe"
    android:textColor="@android:color/white"
    android:layout_centerInParent="true"
    android:textSize="18sp"
    android:drawablePadding="5dp"
    android:gravity="center_vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:fontFamily="@font/helvetica_medium"

    />
    </RelativeLayout>


</RelativeLayout>